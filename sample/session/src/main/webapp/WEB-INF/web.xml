<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>HelloSession</servlet-name>
        <servlet-class>top.erzhiqian.servlet.HelloSession</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CookieTest</servlet-name>
        <servlet-class>top.erzhiqian.servlet.CookieTest</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CheckCookie</servlet-name>
        <servlet-class>top.erzhiqian.servlet.CheckCookie</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>NameSubmit</servlet-name>
        <servlet-class>top.erzhiqian.servlet.NameSubmit</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloSession</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CookieTest</servlet-name>
        <url-pattern>/cookieTest.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CheckCookie</servlet-name>
        <url-pattern>/checkCookie.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NameSubmit</servlet-name>
        <url-pattern>/submitName</url-pattern>
    </servlet-mapping>
</web-app>